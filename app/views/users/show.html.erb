<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <%= stylesheet_link_tag 'users', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="user">
    <h1 class="user__user-title">User Information</h1>

    <% if flash[:notice] %>
      <div class="flash notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash alert"><%= flash[:alert] %></div>
    <% end %>

    <div class="user__user-info">
      <div class="user__name">Name:
        <div class="user__name-input"><%= @user.name %></div>
      </div>
      <div class="user__username">Username:
        <div class="user__username-input"><%= @user.username %></div>
      </div>
      <div class="user__email">Email:
        <div class="user__email-input"><%= @user.email %></div>
      </div>

      <div class="user__buttons">
        <!-- Edit button -->
        <div class="user__edit-profile">
          <%= link_to "Edit Profile", edit_user_path(@user) %>
        </div> 

        <!-- Delete button -->
        <div class="user__delete-profile">
          <%= button_to "Delete Profile", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your profile?" }%>
        </div>
      </div>

    </div>

  </body>
</html>
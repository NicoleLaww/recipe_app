<html>

  <section class="recipes">

    <%= stylesheet_link_tag 'recipes', 'data-turbolinks-track': 'reload' %>
    
    <header>
      <h2 class="recipes__title">Add a new recipe</h2>
    </header>

    <%= form_for @recipe, url: user_recipes_path(current_user), method: :post do |f| %>

    <div class="recipes__form">
    
      <div class="recipes__form-group">
        <%= f.label :title, 'Recipe name:' %>
        <%= f.text_field :title, required: true, placeholder: 'Ex: Banana mix' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :number_of_servings, 'Number of servings:' %>
        <%= f.number_field :number_of_servings, required: true, placeholder: 'Ex: 10' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :time, 'Total time (minutes):' %>
        <%= f.text_field :time, required: true, placeholder: 'Ex: 45' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :description, 'Description:' %>
        <%= f.text_area :description, required: true, placeholder: 'Ex: This recipe is my favourite, because it is tasty, takes only 10 minutes to be ready, and you need only 4 ingredients.' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :country, 'Country:' %>
        <%= f.text_field :country, required: true, placeholder: 'Ex: Canada' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :ingredients, 'Ingredients:' %>
        <%= f.text_area :ingredients, required: true, placeholder: 'Ex:
        3 eggs
        1 cup flour
        1/2 tsp baking powder
        3 bananas' %>
      </div>

      <div class="recipes__form-group">
        <%= f.label :instructions, 'Instructions:' %>
        <%= f.text_area :instructions, required: true, placeholder: 'Ex:
        1. Preheat the oven at 300Â°C
        2. Smash the bananas
        3. In a medium bowl, mix the flour and the baking powder
        4. Add the eggs to the bowl and mix well
        5. Add the smashed bananas and mix well
        6. Take the mixture to the oven for 5 minutes' %>
      </div>

    </div>  
    
    <div class="recipes__checkbox-options">

      <div class="recipes__form-group">
        <span>Please select all options that apply to your recipe:</span><br>

        <!-- The options for breakfast, lunch, dinner, and dessert will be added here -->
        
        <div class="recipes__option">
          <%= f.check_box :vegetarian %>
          <%= f.label :vegetarian, "Vegetarian" %>
        </div>
        
        <div class="recipes__option">
          <%= f.check_box :vegan %>
          <%= f.label :vegan, "Vegan" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :gluten_free %>
          <%= f.label :gluten_free, "Gluten-free" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :peanut_free %>
          <%= f.label :peanut_free, "Peanut-free" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :halal %>
          <%= f.label :halal, "Halal" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :kosher %>
          <%= f.label :kosher, "Kosher" %>
        </div>
      </div>

      <div class="recipes__form-group">
        <span>What type of meal is this?</span><br>

        <div class="recipes__option">
          <%= f.check_box :breakfast %>
          <%= f.label :breakfast, "Breakfast" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :lunch %>
          <%= f.label :lunch, "Lunch" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :dinner %>
          <%= f.label :dinner, "Dinner" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :dessert %>
          <%= f.label :dessert, "Dessert" %>
        </div>

        <div class="recipes__option">
          <%= f.check_box :appetizer %>
          <%= f.label :appetizer, "Appetizer" %>
        </div>
      </div>

      <div class="recipes__form-group">
        <%= f.label :photo %>
        <%= f.text_field :photo, required: true %>
      </div>
    
    </div>

    <%= f.submit 'Add recipe', class: 'recipes__add-button' %>
    
    <% end %>
    
  </section>

</html>
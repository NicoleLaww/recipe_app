<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag 'sessions', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<h1>Login</h1>

  <% if flash[:notice] %>
    <div class="flash notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="flash alert"><%= flash[:alert] %></div>
  <% end %>

<%= form_for :session, url:'/login', method: :post do |f|%>
  
  <!-- For log out page -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-group">
   <%= f.label :email, 'Email:' %>
   <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit" %>
  </div>

  <% end %>
</body>
</html>
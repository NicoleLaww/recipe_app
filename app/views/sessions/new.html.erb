<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%= stylesheet_link_tag 'sessions', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body class="login">
    
    <h2 class="login__title">Log in</h2>

    <% if flash[:notice] %>
      <div class="flash notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash alert"><%= flash[:alert] %></div>
    <% end %>

    <div class="login__form">
      <%= form_for :session, url:'/login', method: :post do |f|%>
      
      <!-- For log out page -->
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <div class="login__form-group">
      <%= f.label :email, 'Email:' %>
      <%= f.text_field :email %>
      </div>

      <div class="login__form-group">
        <%= f.label :password, 'Password:' %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.submit "Submit", class: 'login__button' %>
      </div>

      <% end %>

    </div>

  </body>
</html>
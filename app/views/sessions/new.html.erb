<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag 'sessions', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<h1>Login</h1>

<%= form_for :session, url:'/login', method: :post do |f|%>

  <div class="form-group">
   <%= f.label :email, 'Email:' %>
   <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit" %>
  </div>

  <% end %>
</body>
</html>
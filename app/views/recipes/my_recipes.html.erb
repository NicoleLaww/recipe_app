<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <%= stylesheet_link_tag 'recipes', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="recipes__my-recipes">
    <!-- List of user recipes --> 
    <h2 class="recipes__title">My Recipes</h2>

    <% if flash[:notice] %>
      <div class="flash notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash alert"><%= flash[:alert] %></div>
    <% end %>
 
    <div class="recipes__container-card"> 

      <% @user.recipes.each do |recipe| %>
        
        <article class="recipes__recipe">

          <div class="recipes__recipe-wrapper">
            <div class="recipes__name">
              <%= link_to recipe.title, recipe_path(recipe) %>
            </div>

            <div class="recipes__image">
              <%= image_tag recipe.photo %>
            </div>
          </div>

        </article>
      <% end %>

    </div>

  </body>
</html>